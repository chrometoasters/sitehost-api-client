{
    "name": "chrometoaster/sitehost-api-client",
    "description": "PHP client for SiteHost's API",
    "type": "library",
    "keywords": [
        "sitehost",
        "sitehostnz",
        "api",
        "client"
    ],
    "homepage": "https://github.com/chrometoasters/sitehost-api-client",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Chrometoaster Ltd.",
            "email": "opensource@chrometoaster.com"
        }
    ],
    "support": {
        "issues": "https://github.com/chrometoasters/sitehost-api-client/issues"
    },
    "require": {
        "php": "^7.3",
        "ext-yaml": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "chrometoaster/backend-coding-standards": "~1.1.0",
        "phpstan/phpstan-shim": "~0.9.2",
        "symbiote/silverstripe-phpstan": "~3.0.2"
    },
    "scripts": {
        "lint": "parallel-lint src api.php --colors && ecs check src api.php --ansi",
        "lint-fix": "parallel-lint src api.php --colors && ecs check src api.php --fix --ansi",
        "stan": "phpstan analyse src api.php -c phpstan.neon -a vendor/symbiote/silverstripe-phpstan/bootstrap.php --level 1  --ansi",
        "full-check": [
            "@lint-fix",
            "@stan"
        ]
    },
    "autoload": {
        "psr-4": {
            "Chrometoaster\\SiteHost\\API\\": "src/SiteHost/API/"
        }
    }
}
